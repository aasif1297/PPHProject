<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".RessetPasswordActivity">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textSize="18sp"
        android:textColor="@color/greycolour"
        android:text="We will mail you a link on your Email to reset your password.Please enter your valid email address"/>

    <EditText
        android:id="@+id/reset_email_address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:background="#f2f2f2"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design_programs_colour3"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="213dp"/>
</android.support.constraint.ConstraintLayout>