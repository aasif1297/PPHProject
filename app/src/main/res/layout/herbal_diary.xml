<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout  tools:context="com.londonsoftware.calisthenics.calisthenics.Herbal_Diary"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/backspace"
        android:src="@drawable/ic_backspace"/>

    <ImageView
        android:layout_height="80dp"
        android:layout_width="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/applogo_roundedcornersextra"
        android:layout_marginTop="30dp"
        android:id="@+id/login_logo"/>

    <EditText
        android:background="#f2f2f2"
        android:layout_height="40dp"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_username_edittxt"
        android:layout_above="@+id/login_password_edittxt"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:inputType="textPersonName"
        android:textColor="#666666"
        android:padding="5dp"
        android:hint="Email Address"
        android:ems="10"
        android:drawableStart="@drawable/ic_action_user"/>

    <EditText
        android:background="#f2f2f2"
        android:layout_height="40dp"
        android:layout_width="250dp"
        android:textSize="12sp"
        android:id="@+id/login_password_edittxt"
        android:layout_marginBottom="90dp"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:textColor="#666666"
        android:padding="5dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_action_pass"
        android:layout_alignStart="@+id/login_username_edittxt"
        android:layout_alignBottom="@+id/login_button"/>


    <Button
        android:id="@+id/login_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:background="@drawable/button_design_programs_colour3"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff">


    </Button>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="142dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/register_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="Register Here."
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/login_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_above="@+id/login_username_edittxt"
        android:layout_marginBottom="10dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_facebook"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_username_edittxt"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="78dp"
        android:background="@color/colorPrimary"
        android:text="Login with facebook" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_red_light"
        android:text="signin with google " />

</RelativeLayout>