<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.londonsoftware.calisthenics.calisthenics.Acerola_Cherry">



    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#008ae6"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Acerola Cherry"
            app:titleTextAppearance="@style/TabToolbar.TitleText"
            app:titleTextColor="@android:color/white">

        </android.support.v7.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/acerolacherry"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:fontFamily="@font/brawler"
            android:text="Latin Name: Malpighia glabra"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/brawler"
            android:text="Also known as: Barbados Cherry, West Indian Cherry, Cereza, Semeruco, Cerisier, Florida Sweet, Manoa Sweet."
            android:textSize="12sp"
            android:textStyle="italic" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_design_macrosbutton3"
                android:fontFamily="serif"
                android:onClick="ShowPopup_acerola"
               android:padding="2dp"
                android:text="MACROS"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/button"
                android:layout_width="179dp"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_design_macrosbutton3"
                android:fontFamily="serif"
                android:onClick="ShowPopupNutrition_acerola"
                android:padding="2dp"
                android:text="Nutrients &amp; Minerals"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2" />


        </android.support.constraint.ConstraintLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:maxLines="4"
            android:id="@+id/hemptext"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/brawler"
            android:text="According to a study done by the Journal of Nutritional Science and Vitaminology, acerola cherry extract can help stop the growth and spread of lung cancer.\n\nIn another study published in 2004 in an issue of Phytotherapy Research, acerola juice extract helps inhibit tumorous cell growth. Also, the cherry can improve the antioxidant capacity of other nutrients when consumed at the same time.\n\nAccording to the journal Rural Science, which published a study in 2006, the acerola cherry has the highest antioxidant capacity out of 14 different Amazonian berries. And in a similar study made by the journal Plant Foods and Human Nutrition, unripe acerola has a very powerful ability to protect DNA from oxidative stress and can inhibit the free radical DPHH.\n\nThe fruit has shown to: aid in weight loss; manage diabetes; prevent cancer; delay signs of aging; boost the immune system; promote heart health; promote good digestion; promote good eye health and improve skin condition."
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/detail_read_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center"
            android:text="Read More"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="10.5sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_design_mobilitybutton"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hemptext" />

    </LinearLayout>

</ScrollView>