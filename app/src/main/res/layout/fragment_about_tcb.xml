<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.londonsoftware.calisthenics.calisthenics.AboutFragment">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trirong_light"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="UPDATES"
        android:textColor="#3D6B9D"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/biceptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trirong_light"
        android:text="You can find the latest updates by checking The Google Play Store:"
        android:textSize="12sp"
        android:textStyle="bold" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updates"
        android:id="@+id/rateusbtn"
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_design_programs_colour3"/>


    <TextView
        android:id="@+id/biceptext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trirong_light"
        android:text="If you have any recommendations on how to improve this app then feel free to email us your suggestions at: thecalisthenicsblueprint@gmail.com"
        android:textSize="12sp"
        android:textStyle="bold" />





    <TextView
        android:id="@+id/biceptext36143"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trirong_light"
        android:text="RATE US"
        android:textColor="#3D6B9D"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/biceptext3146"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trirong_light"
        android:textStyle="bold"
        android:text="You can also rate us by clicking the above link to access your Google Play Store account."/>


</LinearLayout>
</ScrollView>