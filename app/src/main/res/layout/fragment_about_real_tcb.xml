<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.londonsoftware.calisthenics.calisthenics.AboutFragment">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <TextView
        android:id="@+id/biceptext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trirong_light"
        android:text="This app is a platform for individuals of any ability willing to learn how to master their own bodyweight through calisthenics. The app provides a comprehensive list of calisthenics exercises, as well as a challenging fitness routine for users to follow.\n\nFor a better user experience, we have avoided using ads throughout the application."
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/biceptext32"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#ff0000"
        android:layout_marginStart="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="90dp"
        />

    <TextView
        android:id="@+id/biceptext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="#000000"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trirong_light"
        android:text="All exercises and use of this app are performed at your own risk."
        android:textSize="12sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/biceptext33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/trirong_light"
        android:text="The purpose of the Health &amp; Nutrition section is to display nutritional information only. Any individual wishing to consume herbal products should consult a doctor or a medical professional beforehand."
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy policy"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:padding="15dp"
        android:background="@drawable/button_design_programs_colour3"
        android:id="@+id/buttonprivacy"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/biceptext331"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:text="Calisthenics\nThe Blueprint Guide\n2019"
        android:fontFamily="@font/trirong_light"
        android:textColor="#3D6B9D"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/biceptext3331"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:text="v1.8.1.2"
        android:fontFamily="@font/trirong_light"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold" />


</LinearLayout>
</ScrollView>